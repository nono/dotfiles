	oneline = log --oneline --decorate
	last = log --oneline -1 HEAD
	out = log --oneline origin/master..HEAD
	wdiff = diff --color-words
	info = remote -v
	authors = "!git log --format='%aN <%aE>' | sort -u"
	initial = "!sh -c 'git init && git add . && git ci -m \"Initial import\"'"
