[user]
	name = Bruno Michel
	email = bmichel@menfin.info
[color]
	status = auto
	diff = auto
	branch = auto
	interactive = auto
[alias]
	ci = commit
	co = checkout
	staged = diff --cached
	unstage = reset HEAD --
	ignored = ls-files --others
	oneline = log --oneline --decorate
	last = log --oneline -1 HEAD
	out = log --oneline origin/master..HEAD
	wdiff = diff --color-words
	info = remote -v
	url =! bash -c 'git config --get remote.origin.url | sed -E "s/.+:\\(.+\\)\\.git$/https:\\\\/\\\\/github\\\\.com\\\\/\\\\1/g"'	
	rank = shortlog -sn --no-merges
	setup = "!sh -c 'git init && touch .gitignore && git add . && git ci -m \"Initial import\"'"
	up = "!sh -c 'git stash && git pull && git stash pop'"
	oumph = "commit --author=\"Beno√Æt Sibaud <oumph@linuxfr.org>\""
	amend = commit --amend --reuse-message=HEAD
	serve = daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
	latest = for-each-ref --sort=-committerdate --format='%(committerdate:relative) %(refname:short)'
[diff]
	renames = true
[branch]
	autosetupmerge = true
	autosetuprebase = always
[push]
	default = upstream
[github]
	user = nono
[rerere]
	enabled = 1
[diff "exif"]
	textconv = exiftool
[grep]
	extendRegexp = true
