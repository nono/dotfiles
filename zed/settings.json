// Zed settings - https://zed.dev/docs/configuring-zed
{
  "vim_mode": true,

  // AI
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },

  // Visual
  "theme": "Nord",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "cursor_blink": false,
  "terminal": {
    "dock": "left",
    "copy_on_select": true
  },
  "scrollbar": {
    "axes": {
      "horizontal": false
    }
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },

  // Language specific
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  }
}
