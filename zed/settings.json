// Zed settings - https://zed.dev/docs/configuring-zed
{
  "vim_mode": true,

  // AI
  "assistant": {
    "default_profile": "ask",
    "profiles": {
      "ask": {
        "name": "Ask",
        "tools": {
          "move_path": true,
          "copy_path": true,
          "edit_file": true,
          "contents": true,
          "diagnostics": true,
          "fetch": true,
          "list_directory": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "open": true,
          "grep": true,
          "thinking": true,
          "web_search": true,
          "create_directory": true
        },
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },

  // Visual
  "theme": "Nord",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "cursor_blink": false,
  "terminal": {
    "dock": "left",
    "copy_on_select": true
  },
  "scrollbar": {
    "axes": {
      "horizontal": false
    }
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },

  // Language specific
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  }
}
