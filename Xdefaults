! urxvt & aterm
*scrollBar:false
*inheritPixmap:true
*transparent:true
*shading:60
*tintColor:white
*imLocale:fr_FR.UTF8
*saveLines:5000
URxvt*termName: rxvt

! Perl extensions for uxxvt
URxvt.perl-ext: default,matcher,selection-autotransform
URxvt.matcher.button: 1
URxvt.urlLauncher: firefox-4.0
URxvt.matcher.pattern.1: \\bwww\\.[\\w-]\\.[\\w./?&@#-]*[\\w/-]
URxvt.selection-autotransform.0: s/^([^:[:space:]]+):(\\d+):?$/+$2 \\Q$1\\E\\x0d/

